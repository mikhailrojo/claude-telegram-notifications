{
  "description": "Telegram notifications for idle and permission prompts",
  "hooks": {
    "Notification": [
      {
        "matcher": "idle_prompt|permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/notify.sh",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
